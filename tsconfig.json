{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution":"node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
